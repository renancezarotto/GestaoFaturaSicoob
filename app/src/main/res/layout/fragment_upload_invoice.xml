<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true">

    <!-- Cabeçalho Padronizado -->
    <include layout="@layout/include_app_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Placeholder para animação (use ImageView se não tiver Lottie) -->
        <ImageView
            android:id="@+id/imageUpload"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_invoice"
            android:contentDescription="Upload"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/title"
            android:text="Processar Fatura"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:textColor="?attr/colorOnSurface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView
            android:text="Selecione o PDF da sua fatura do Sicoob para processamento automático"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSelectPDF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecionar e Processar PDF"
            android:backgroundTint="@color/md_theme_light_primary"
            android:textColor="@color/md_theme_light_onPrimary"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_invoice"
            app:iconPadding="10dp"
            style="@style/Widget.App.Button"/>

        <!-- Preview Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPDFPreview"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp">
            
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textPDFName"
                    android:text="fatura.pdf"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                
                <TextView
                    android:id="@+id/textPDFSize"
                    android:text="0.0 MB"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Processando automaticamente..."
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <ProgressBar
            android:id="@+id/loadingUpload"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:indeterminateTint="@color/md_theme_light_primary"
            android:layout_marginTop="30dp"/>
        
        <TextView
            android:id="@+id/textProcessing"
            android:text="Processando PDF..."
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
