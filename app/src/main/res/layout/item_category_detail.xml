<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header da Categoria -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="4dp">

            <!-- Ãcone da Categoria -->
            <TextView
                android:id="@+id/textCategoryIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="ðŸ½ï¸"
                android:textSize="20sp"
                android:gravity="center"
                android:background="?attr/colorPrimaryContainer"
                android:layout_marginEnd="12dp" />

            <!-- Nome da Categoria -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textCategoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AlimentaÃ§Ã£o"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/textCategoryPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35% do total"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

            <!-- Valor Total -->
            <TextView
                android:id="@+id/textCategoryTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 1.200,00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary" />

            <!-- Ãcone de Expandir -->
            <ImageView
                android:id="@+id/imageExpand"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_more"
                android:rotation="90"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Lista de Despesas (ExpandÃ­vel) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_expense_detail" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
