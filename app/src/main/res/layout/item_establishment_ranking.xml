<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Posição -->
    <TextView
        android:id="@+id/textRankingPosition"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnPrimary"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:layout_marginEnd="12dp" />

    <!-- Nome do Estabelecimento -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textEstablishmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supermercado ABC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/textEstablishmentCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mercado"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

    <!-- Valor Total -->
    <TextView
        android:id="@+id/textEstablishmentTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 850,00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary" />

</LinearLayout>
