    <!-- Custom Button Styles with Turquoise Color -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/md_theme_light_primary</item>
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/md_theme_light_primary</item>
        <item name="android:textColor">@color/md_theme_light_primary</item>
    </style>

    <style name="Widget.App.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/md_theme_light_primary</item>
    </style>

    <style name="Widget.App.Button.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/md_theme_light_primary</item>
    </style>

    <style name="Widget.App.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="tint">@color/md_theme_light_onPrimary</item>
    </style>

    <style name="Widget.App.ExtendedFAB" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="iconTint">@color/md_theme_light_onPrimary</item>
    </style>
